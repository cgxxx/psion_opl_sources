SURF:LOCAL A,B,H,O,S,SP,ST,M%,N%N%=1 :O=1D::CLSAT 4,1: PRINT "CALCUL SURFACE"PRINT "--------------------";M%=MENUN(2,"TRIANGLE,TRAPEZE,RECTANGLE")IF M%=0 :STOPELSEIF M%=1 :GOTO TR::ELSEIF M%=2 :GOTO TRA::ELSEIF M%=3 :GOTO REC::ENDIFTR::CLSPRINT "BASE    : ";:INPUT BPRINT "HAUTEUR : ";:INPUT HIF H=0 :GOTO TR:: :ENDIFS=(B*H)/2GOTO S::TRA::CLSPRINT "Gde BASE : ";:INPUT APRINT "Pte BASE : ";:INPUT BPRINT "HAUTEUR : ";:INPUT HIF H=0 :GOTO TRA:: :ENDIFS=(A+B)/2*HGOTO S::REC::CLSPRINT "LONGUEUR : ";:INPUT APRINT "LARGEUR  : ";:INPUT BIF B=0 :GOTO REC:: :ENDIFS=A*BS::IF O<0 AND ABS(S)>ABS(SP) :BEEP 50,200: CLS :AT 6,2 :PRINT "IMPOSSIBLE" :PAUSE -50:GOTO M:: :ENDIFPRINT "S:";FIX$(S*O,2,-6);SP=SP+(S*O)ST=ST+(S*O)PRINT "<>S";FIX$(N%,0,-2);":";FIX$(SP,2,-6);PRINT "SURF. TOTALE:";FIX$(ST,2,-7)GETM::AT 1,4M%=MENUN(1,"AJOUTER,DEDUIRE,SUIVANTE,FIN")IF M%=1 :O=1 :GOTO D::ELSEIF M%=2 :O=-1 :GOTO D::ELSEIF M%=3 :SP=0 :O=1 :N%=N%+1 :GOTO D::ELSEIF M%=4 :GOTO F::ELSEIF M%=0 :STOPENDIFF::CLSAT 4,1 :PRINT "SURFACE TOTALE"AT 6,2 :PRINT FIX$(ST,2,-8)AT 6,3 :PRINT N% ;" ELEMENTS"GETAT 1,4M%=MENUN(1,"SUITE,NOUV.,QUITTER")IF M%=1 :O=1 :N%=N%+1 :SP=0 :GOTO D::ELSEIF M%=2 :N%=1 :O=1 :SP=0 :ST=0 :GOTO D::ELSEIF M%=3 :RETURNENDIF