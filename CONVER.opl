CONVER:LOCAL M%,a$(100),n%,e,s,n$(20,20),I%,v(20),rUDG 1,0,0,0,0,0,0,0,31D:: :CLSPRINT "    CONVERSIONS"PRINT "--------------------"m%=menun(2,"Distance,Tempär.,Volume,Poids")if m%=1 : GOTO DIS::ELSEif m%=2 :GOTO TEMP::ELSEif m%=3 :GOTO VOL::ELSEif m%=4 :GOTO POI::ELSEif m%=0 :stOPENDIFDIS::UDG 1,0,0,0,0,0,0,0,31n$(1)="Kilomätres" :v(1)=1000n$(2)="Mätres" :v(2)=1n$(3)="Millimätres" :v(3)=0.001N$(4)="Pieds" :v(4)=.3048N$(5)="Pouces" :v(5)=.0254n$(6)="Milles" :v(6)=1609.344n$(7)="Milles-Marin" :v(7)=1852N$(8)="Yards" :v(8)=.9144N$(9)="Pixels" :v(9)=.0254/72MEN:: I%=0 :A$="" :CLSDOI%=I%+1A$=A$+N$(I%)+","UNTIL I%=9PRINT CHR$(24)m%=menun(1,a$)if m%=0 :GOTO D::endifPRINT CHR$(25)at 1,1 :print n$(m%)at 1,4 :n%=menun(1,a$)if n%=0 :GOTO DIS::endifr=v(m%)/v(n%)cls :print n$(m%);" : "; :input es=e*rcls :print e;" ";n$(m%)print"   =   "print s;" ";n$(n%)getGOTO DIS::TEMP::CLSPRINT "    Tempärature   "PRINT "--------------------"m%=menun(2,"Celsius-FAHRENHEIT,Fahrenheit-CELSIUS")if m%=1 : goto cel::ELSEif m%=2 : goto fa::ELSEif m%=0 : GOTO D::endifcel::PRINTprint "Celsius    : ";: INPUT ES=(E*1.8)+32PRINT "Fahrenheit :";FIX$(S,2,-6)GETGOTO TEMP::FA::PRINTprint "Fahrenheit : ";: INPUT ES=(E-32)/1.8PRINT "Celsius    :";FIX$(S,2,-6)GETGOTO TEMP::VOL::CLSPRINT  "      Volume"PRINT "--------------------"m%=menun(2,"LITRES-GALLONS US/GB,GALLONS-LITRES")if m%=1 : goto L::ELSEif m%=2 : goto G::ELSEif m%=0 : GOTO D::endifl::PRINTprint "Litres     : ";: INPUT EIF E=0 :GOTO VOL:: :ENDIFS=E/3.785411784PRINT "Gallons(US):";FIX$(S,3,-8);S=E/4.546PRINT "Gallons(GB):";FIX$(S,3,-8)GETGOTO VOL::g::PRINTR=0print "Gallons(US): ";: INPUT EIF E=0 :R=2 :CLS :PRINT :PRINT "Gallons(GB): ";:INPUT EENDIFif e=0 :goto VOL:: :endifIF R=2 :S=E*4.546 :R=4.546/3.785411784*E :PRINT "Gallons(US):";FIX$(R,3,-8);: GOTO LL::  :ENDIFS=3.785411784/4.546*EPRINT "Gallons(GB):";FIX$(S,3,-8);S=E*3.785411784LL::PRINT "Litres     :";FIX$(S,3,-8)GETGOtO VOL::poi::CLSPRINT  "       Poids"PRINT "--------------------"m%=menun(2,"KILO.-LIVRES,LIVRES-KILO.")if m%=1 : goto K::ELSEif m%=2 : goto LI::ELSEif m%=0 : GOTO D::endifK::PRINTprint "Kilo.  : ";: INPUT EIF E=0 :GOTO POI:: :ENDIFS=E*2.204622622PRINT "Livres :";FIX$(S,4,-8)GETGOTO poi::LI::PRINTprint "Livres : ";: INPUT EIF E=0 :GOTO POI:: :ENDIFS=E/2.204622622PRINT "Kilo.  :";FIX$(S,4,-8)GETGOTO poi::