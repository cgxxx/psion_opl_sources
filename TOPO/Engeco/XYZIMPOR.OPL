xyzimp:
REM **** XYZ ****
REM ** DGX ** MARS 90 **
LOCAL X1,X2,Y1,Y2,DX,DY,DIST,GIS,GIS1,T%,M%,DSP,ZEN,ZEN1,Z,HT,PTE,DZ,Z2,FLAG,VST,i%
IF PEEKB($2099)<>255 :RETURN :ENDIF
if imp<>0 :lprint chr$(15); :lprint chr$(17);"**  C A L C U L   X Y Z  **" :ENDIF
DEBUT:: :cls 
X2=0 :Y2=0
AT 3,1 :PRINT "COORD. X DU POLE ";CHR$(63); :AT 7,2 :INPUT X1
IF X1=0 :GOTO CHEPOLE:: :ENDIF
AT 3,3 :PRINT "COORD. Y DU POLE ";CHR$(63) :AT 7,4 :INPUT Y1
CLS :AT 3,1 :PRINT "ALTITUDE DU POLE ";CHR$(63); :AT 7,2 :INPUT Z
AT 5,3 :PRINT "V0 DU POLE ";CHR$(63) :AT 7,4 :INPUT VST
AT 3,3 :PRINT "HAUTEUR APPAREIL ";CHR$(63); :AT 7,4 :INPUT HT
if imp<>0
lprint "-------- P O L E  ---------"
lprint "COORDONNEE X  :";FIX$(X1,3,-11)
LPRINT "COORDONNEE Y  :";FIX$(Y1,3,-11)
lprint "ALTITUDE      :";FIX$(Z,3,-11)
LPRINT "HT. APPAREIL  :";FIX$(HT,3,-11)
LPRINT REPT$("=",27)
cls
AT 1,1 :PRINT REPT$("-",20)
at 1,2 :PRINT "No du Premier Point a Calculer ";chr$(63); :input i%
if i%=0 :return :endif
endif
POLE:: :CLS
AT 1,1 :PRINT "X POLE :";FIX$(X1,3,-11)
AT 1,2 :PRINT "Y POLE :";FIX$(Y1,3,-11)
AT 1,3 :PRINT "Dist. si SP 0";CHR$(63);" "; :INPUT DIST
IF DIST=0 :FLAG=1 
AT 1,3 :PRINT"Distance SP ";CHR$(63); :INPUT DSP
AT 1,4 :PRINT"Zenithal  ";chr$(63); :input ZEN1
IF ZEN1>200
ZEN1=400-ZEN1 
ENDIF
ZEN1=300-ZEN1 
ZEN=ZEN1*PI/200
DIST=ABS(DSP*(COS(ZEN)))
ENDIF
AT 1,3 :PRINT REPT$(" ",20)
AT 1,3 :PRINT "Distance : ";FIX$(DIST,3,-8)
IF FLAG=1 :FLAG=0 :GOTO HT:: :ENDIF
AT 1,4 :PRINT "Zenithal :";chr$(63); :input zen1
IF ZEN1>200 :ZEN1=400-ZEN1 :ENDIF
ZEN1=300-ZEN1
ZEN=ZEN1*PI/200
HT:: :AT 1,4 :PRINT "Hauteur Signal ";CHR$(63); :INPUT PTE
AT 1,4 :PRINT "Azimut   :";CHR$(63); :INPUT GIS
GIS=GIS+VST
GIS1=GIS*PI/200
DX=SIN(GIS1)*DIST
DY=COS(GIS1)*DIST
X2=X1+DX :Y2=Y1+DY
DZ=(DIST*TAN(ZEN)+HT-PTE)+.0683*((DIST/1000)*(DIST/1000))
Z2=Z+DZ
CLS
AT 1,1 :PRINT "X POINT :";fix$(X2,3,-11)
AT 1,2 :PRINT "Y POINT :";fix$(Y2,3,-11)
AT 1,3 :PRINT "Z POINT :";FIX$(Z2,3,-11);
AT 1,4 :PRINT CHR$(16);
if imp<>0
lprint "POINT No      :",FIX$(i%,0,-10)
lprint "COORDONNEE X  :";FIX$(X2,3,-11)
LPRINT "COORDONNEE Y  :";FIX$(Y2,3,-11)
lprint "ALTITUDE      :";FIX$(Z2,3,-11)
LPRINT REPT$("=",27)
endif
PAUSE 50
AT 1,4 :PRINT CHR$(16);
AT 1,4 :PRINT "UN AUTRE CALCUL O/N"
LABEL::
T%=GET
IF T%=%O :GOTO CHEPOLE::
ELSEIF T%=%N :TOPOIMP:
ELSE :GOTO LABEL::
ENDIF
CHEPOLE:: :CLS
PRINT "    *** XYZ ***"
PRINT "--------------------"
M%=MENUN(2,"AUTRE-PT,NOUVEAU,FIN")
IF M%=0 OR M%=3 :TOPOIMP:
ELSEIF M%=1 :i%=I%+1 :GOTO POLE::
ELSEIF M%=2 :GOTO DEBUT::
ENDIF
