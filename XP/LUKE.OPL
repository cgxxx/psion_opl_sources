luke:LOCAL A$(255,32),L,m,f,amL=1A:: cls :if l<>1 :at 1,1 :print l-1;":";a$(l-1) else at 1,1 :print "LUKE 1.0--PSION"endifat 1,2 :print l;":"; :INPUT A$(L)IF A$(L)="%" :STOPelseif a$(l)="l" or a$(l)="L" :goto list::elseif a$(l)="m" or a$(l)="M" :goto modif::ENDIFL=L+1 :GOTO A::list:: if l=1 :goto a::endifR:: CLS :AT 1,1 :print "de "; :input m :IF M>L-1 :GOTO R::ELSEIF M<1 :GOTO A::ENDIFR2:: AT 8,1 :print "a "; :input AmIF AM<1 OR AM<M OR AM>L-1 :GOTO R2::ENDIFAM=AM+1CLSb:: at 1,2 :print "Ligne ";mat 1,1 :view(1,a$(m)+" - ")m=m+1if m=am :goto a::endifgoto b::modif:: cls :print"Ligne "; :input fIF L=1 :GOTO A::ENDIFif f>l-1 :goto modif::elseif f<1 :goto modif::endifview(1,a$(f)+" - ")at 1,2 :print f;":"; :input a$(f)goto a::