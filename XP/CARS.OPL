CARS:LOCAL VIE%,TO%,LARG%,X%,AX%,DIR%,POS%,VI%,TMP%LOCAL CARS$(3),VI$(3),ROUTE$(16)LOCAL POUDG:(1,14,31,31,14,14,31,31,14)AT 1,2 :PRINT "APPUYEZ SUR ON";VIEW(1,"CONTROLE DU VEHICULE: FLECHE DROITE ET GAUCHE. VITESSE : FLECHES HAUT ET BAS. ARRET DU JEU: TOUCHE MODE.PAUSE :TOUHCHE ON/CLEAR.")DOPO=0VIE%=3CARS$=CHR$(1)LARG%=9AX%=8-LARG%/2X%=8-LARG%/2POS%=8VI%=0AX%=8-LARG%/2X%=8-LARG%/2POS%=8VI%=0ROUTE$=CHR$(255)+REPT$(" ",LARG%-2)+CHR$(255)PRINT REPT$("*",32);DODIR%=RND*3IF DIR%=0 AND X%<=16-LARG%X%=X%+1ELSEIF DIR%=2 AND X%>1X%=X%-1ENDIFBEEP 1,10000AT AX%,1PRINT ROUTE$AT X%,2PRINT ROUTE$VI$="0"+FIX$(VI%+1,0,2)AT 16,2 :PRINT RIGHT$(VI$,1)AT 16,1 :PRINT LEFT$(RIGHT$(VI$,2),1);AT POS%,2PRINT CARS$TMP%=100WHILE TMP%>VI%*5TMP%=TMP%-1ENDWHTO%=KEYIF TO%=5POS%=POS%-1ELSEIF TO%=6POS%=POS%+1ELSEIF TO%=4 AND VI%>0VI%=VI%-1ELSEIF TO%=3 AND VI%<9VI%=VI%+1ENDIFAT POS%,2PRINT CARS$IF POS%<=X%+1 OR POS%>=X%-1+LARG%PRINT "******************** CRASH *****";BEEP 100,500 :CLSVIE%=VIE%-1POS%=X%+LARG%/2CLSPRINT REPT$("*",32);ENDIFCLSAX%=X%PO=PO+1+VI%UNTIL VIE%=0 OR TO%=2CLSPRINT "DISTANCE:";POGETDIR%=MENU("REJOUER,QUITTER")UNTIL TO%=2 OR DIR%=2 OR DIR%=0