Xconvers:local cm,in,f,c,m,en,di,mm,m%PRINT " * CONVERSION * "VIEW(2,"CG - DG * Octobre 1994 *")a:: cm=0 :in=0 :f=0 :c=0 :m=0 :en=0 :di=0 :mm=0m%=menu("Centimetre-Inche,Inche-Centimetre,Metre-Feet,Feet-Metre,Fahrenh.-Celsius,Celsius-Fahrenh.,Fract.Inche-Mill")if m%=1 :goto inch::elseif m%=2 :goto cm::elseif m%=3 :goto feet::elseif m%=4 :goto metr::elseif m%=5 :goto tc::elseif m%=6 :goto tf::elseif m%=7 :goto frac::else returnendifinch:: print "Cm : "; :input cmIN=cm/2.54cls :print "CM     :";FIX$(CM,2,-6)print "Inches :";print FIX$(IN,2,-6)getgoto a::cm::print "Inches :"; :input inCM=in*2.54CLSPRINT "INCHES :";FIX$(IN,2,-6)print"Cm     :";print FIX$(CM,2,-6)getgoto a::feet::print"Metres :"; :input mCLS PRINT "Metre :";fix$(m,2,-6)F=m/0.3046print "Feet  :";fix$(f,2,-6)getgoto a::metr::print "Feet :"; :input fm=f*0.3046clsprint "Feet   :";fix$(f,2,-6)print "Metre  :";fix$(m,2,-6)getgoto a::tc::print "Fahrenheit:"; :input fc=(f-32)/1.8cls :print "Fahren :";fix$(f,2,-6)print"Celsius:";fix$(c,2,-6)getgoto a::tf:: PRINT "Celsius :"; :input cf=(c*1.8+32)cls :print "Celsius:";fix$(c,2,-6)print "Fahren :";fix$(f,2,-6)getgoto a::frac:: print "Entier :"; :input enprint "Divis. :"; :input dimm=en/di*25.4cls :print"Millimetres :"print mm;getgoto a::