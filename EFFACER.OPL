EFFACER:
LOCAL NUMENR%,CHERCHE$(30),K%
FIRST :CLS :PRINT "EFFACER:";
TRAP INPUT CHERCHE$
IF ERR=206
CLS :RETURN
ENDIF
NUMENR%=FIND(CHERCHE$)
DO
IF NUMENR%=0 :PRINT CHR$(16);
CLS :AT 4,3 :PRINT "INTROUVABLE" :PAUSE 20 :CLOSE :CLS :CARNET:
ENDIF
QUEST::
KSTAT 1 :AT 1,2 :PRINT "EFFACER O/N ";CHR$(63)
K%=VIEW(1,A.N$)
IF K%<>%O AND K%<>%N :GOTO QUEST::
ELSEIF K%=%O :ERASE
ELSEIF K%=%N :NEXT :NUMENR%=FIND(CHERCHE$)
ENDIF
UNTIL EOF
